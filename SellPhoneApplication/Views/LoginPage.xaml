<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SellPhoneApplication.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:SellPhoneApplication.Converters"
    BackgroundColor="#F8F8F8">

    <ContentPage.Resources>
        <converters:StringNotNullOrEmptyConverter x:Key="StringNotNullOrEmptyConverter" />
    </ContentPage.Resources>

    <VerticalStackLayout
        Padding="20"
        HorizontalOptions="Center"
        Spacing="20"
        VerticalOptions="Center">

        <VerticalStackLayout Spacing="20" WidthRequest="400">

            <Image
                HeightRequest="40"
                HorizontalOptions="Center"
                Source="senifone.png"
                WidthRequest="150" />

            <Label
                Margin="0,10,0,10"
                FontAttributes="Bold"
                FontSize="26"
                HorizontalOptions="Start"
                Text="Đăng nhập"
                TextColor="{DynamicResource CustomBlack}" />

            <Label
                FontSize="18"
                HorizontalOptions="Start"
                Text="Email" />
            <Entry
                HeightRequest="40"
                Keyboard="Email"
                Placeholder="Enter your email"
                Text="{Binding Email}" />
            <Label
                FontSize="18"
                HorizontalOptions="Start"
                Text="Mật khẩu" />
            <Entry
                HeightRequest="40"
                Keyboard="Text"
                Placeholder="Enter your password"
                Text="{Binding Password}" />

            <AbsoluteLayout HeightRequest="80">

                <!--  General Error Label  -->
                <Label
                    AbsoluteLayout.LayoutBounds="0,0,1,20"
                    AbsoluteLayout.LayoutFlags="WidthProportional"
                    FontSize="14"
                    HorizontalOptions="Center"
                    IsVisible="{Binding GeneralError, Converter={StaticResource StringNotNullOrEmptyConverter}}"
                    Text="{Binding GeneralError}"
                    TextColor="OrangeRed" />

                <!--  Login Button  -->
                <Button
                    AbsoluteLayout.LayoutBounds="0,25,1,44"
                    AbsoluteLayout.LayoutFlags="WidthProportional"
                    Command="{Binding LoginCommand}"
                    CornerRadius="8"
                    HeightRequest="44"
                    Text="Đăng nhập"
                    TextColor="White" />

            </AbsoluteLayout>
            <HorizontalStackLayout HorizontalOptions="End" Spacing="8">
                <Label FontSize="16" Text="Chưa có tài khoản?" />
                <Label
                    x:Name="RegisterLabel"
                    FontSize="16"
                    Text="Đăng ký ngay"
                    TextColor="{DynamicResource CustomBlue}"
                    TextDecorations="None">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRegisterTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>



        </VerticalStackLayout>
    </VerticalStackLayout>

</ContentPage>