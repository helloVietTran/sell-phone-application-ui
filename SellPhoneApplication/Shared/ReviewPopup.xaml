<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="SellPhoneApplication.Shared.ReviewPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Size="360,300"
    Color="Transparent">
    <Frame
        Padding="0"
        BackgroundColor="#F1F1F1"
        BorderColor="Gray"
        CornerRadius="8"
        HasShadow="False">
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label
                FontAttributes="Bold"
                FontSize="18"
                Text="Review của bạn" />

            <!--  Star Rating  -->
            <HorizontalStackLayout x:Name="StarContainer" Spacing="2">
                <!--  stars will be created in code-behind  -->
            </HorizontalStackLayout>

            <!--  Comment input  -->
            <Editor
                x:Name="ReviewEditor"
                AutoSize="TextChanges"
                HeightRequest="100"
                Placeholder="Review của bạn..." />

            <!--  Submit Button  -->
            <Button
                BackgroundColor="Black"
                Clicked="OnSubmitClicked"
                Text="Gửi"
                TextColor="White" />
        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>
