<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="SellPhoneApplication.Shared.PhonePopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Size="400,600"
    Color="Transparent">

    <ScrollView>
        <Frame
            Padding="20"
            BackgroundColor="#F2F2F2"
            BorderColor="Gray"
            CornerRadius="8"
            HasShadow="True">
            <VerticalStackLayout Spacing="20">

                <Label
                    FontAttributes="Bold"
                    FontSize="20"
                    Text="Tạo sản phẩm mới"
                    TextColor="#212121" />

                <!--  Name  -->
                <Entry x:Name="NameEntry" Placeholder="Tên sản phẩm" />

                <!--  Description  -->
                <Editor
                    x:Name="DescriptionEditor"
                    HeightRequest="80"
                    Placeholder="Mô tả..." />

                <!--  Price  -->
                <Entry
                    x:Name="PriceEntry"
                    Keyboard="Numeric"
                    Placeholder="Giá (₫)" />

                <!--  RAM  -->
                <Entry
                    x:Name="RamEntry"
                    Keyboard="Numeric"
                    Placeholder="RAM (GB)" />

                <!--  Memory  -->
                <Entry
                    x:Name="MemoryEntry"
                    Keyboard="Numeric"
                    Placeholder="Bộ nhớ (GB)" />

                <!--  Stock  -->
                <Entry
                    x:Name="StockEntry"
                    Keyboard="Numeric"
                    Placeholder="Tồn kho" />

                <VerticalStackLayout Spacing="10">
                    <!--  Color Picker  -->
                    <Label Text="Màu sắc" />
                    <Picker x:Name="ColorPicker" />

                    <!--  Product Type  -->
                    <Label Text="Loại sản phẩm" />
                    <Picker x:Name="TypePicker" />

                    <!--  Brand  -->
                    <Label Text="Thương hiệu" />
                    <Picker x:Name="BrandPicker" />
                </VerticalStackLayout>

                <Image HeightRequest="120" Source="mockup_phone.png" />

                <Button Clicked="OnPickImageClicked" Text="Chọn ảnh" />

                <!--  Submit  -->
                <Button
                    BackgroundColor="Black"
                    Clicked="OnSubmitClicked"
                    Text="Tạo sản phẩm"
                    TextColor="White" />

            </VerticalStackLayout>
        </Frame>
    </ScrollView>
</toolkit:Popup>
