<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shared="clr-namespace:SellPhoneApplication.Shared"
             x:Class="SellPhoneApplication.View.HomePage">
    <Grid ColumnSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />

            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <shared:HeaderView Grid.Row="0"/>

        <!-- Content -->

        <ScrollView Grid.Row="1">
            <StackLayout>
                <!-- Banner -->
                <Grid HeightRequest="400">
                    <!-- Chiều cao cụ thể giúp kiểm soát layout -->
                    <Image Source="banner.png" Aspect="AspectFill" />
                    <BoxView BackgroundColor="#60000000" />
                    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center" Padding="20" Spacing="10">
                        <Label Text="Thế giới điện thoại mở ra trước mắt bạn" FontSize="40" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" />
                        <Label Text="Mua điện thoại online, giao hàng tận nơi" FontSize="20" FontAttributes="Bold" TextColor="LightGray" HorizontalOptions="Center" />
                        <Button Text="Khám phá ngay" BackgroundColor="#FF5722" TextColor="White" CornerRadius="8" WidthRequest="220" Margin="0,16,0,0" Clicked="OnSenifoneTapped" />
                    </StackLayout>
                </Grid>

                <!-- Review -->
                <ScrollView Orientation="Horizontal">
                    <StackLayout Orientation="Horizontal" Spacing="10" Padding="20,15">

                        <Frame BackgroundColor="White" CornerRadius="10" WidthRequest="250" HasShadow="True">
                            <StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="2">
                                    <Frame BackgroundColor="{DynamicResource CustomGreen}" WidthRequest="24" HeightRequest="24" Padding="0">
                                        <Image Source="star_icon.png" WidthRequest="20" HeightRequest="20" />
                                    </Frame>
                                    <Frame BackgroundColor="{DynamicResource CustomGreen}" WidthRequest="24" HeightRequest="24" Padding="0">
                                        <Image Source="star_icon.png" WidthRequest="20" HeightRequest="20" />
                                    </Frame>
                                    <Frame BackgroundColor="{DynamicResource CustomGreen}" WidthRequest="24" HeightRequest="24" Padding="0">
                                        <Image Source="star_icon.png" WidthRequest="20" HeightRequest="20" />
                                    </Frame>
                                </StackLayout>
                                <Label Text="Trần Minh Hải" FontSize="14"  Margin="0,2,0,0" TextColor="Gray" FontAttributes="Bold" />
                                <Label Text="Giao hàng nhanh chóng, sản phẩm như mô tả, rất hài lòng!" 
                    FontSize="13"
                    TextColor="DarkGray"
                    MaxLines="3" 
                    Margin="0,5,0,0" />
                            </StackLayout>
                        </Frame>

                        <Frame BackgroundColor="White" CornerRadius="10" WidthRequest="250" HasShadow="True">
                            <StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="2">
                                    <Frame BackgroundColor="{DynamicResource CustomGreen}" WidthRequest="24" HeightRequest="24" Padding="0">
                                        <Image Source="star_icon.png" WidthRequest="20" HeightRequest="20" />
                                    </Frame>
                                    <Frame BackgroundColor="{DynamicResource CustomGreen}" WidthRequest="24" HeightRequest="24" Padding="0">
                                        <Image Source="star_icon.png" WidthRequest="20" HeightRequest="20" />
                                    </Frame>
                                </StackLayout>
                                <Label Text="Nguyễn Thu Hương" FontSize="14"  Margin="0,2,0,0" TextColor="Gray" FontAttributes="Bold" />
                                <Label Text="Sản phẩm tốt, nhưng thời gian giao hàng hơi lâu hơn mong đợi." 
                      FontSize="13"
                      TextColor="DarkGray"
                      MaxLines="3" 
                      Margin="0,5,0,0" />
                            </StackLayout>
                        </Frame>

                        <Frame BackgroundColor="White" CornerRadius="10" WidthRequest="250" HasShadow="True">
                            <StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="2">
                                    <Frame BackgroundColor="{DynamicResource CustomGreen}" WidthRequest="24" HeightRequest="24" Padding="0">
                                        <Image Source="star_icon.png" WidthRequest="20" HeightRequest="20" />
                                    </Frame>
                                </StackLayout>
                                <Label Text="Lê Văn Nam" FontSize="14" TextColor="Gray" FontAttributes="Bold" />
                                <Label Text="Chưa thực sự hài lòng, sản phẩm có một vài lỗi nhỏ." 
                      FontSize="13"
                      TextColor="DarkGray"
                      MaxLines="3" 
                      Margin="0,5,0,0" />
                            </StackLayout>
                        </Frame>

                        <Frame BackgroundColor="White" CornerRadius="10" WidthRequest="250" HasShadow="True">
                            <StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="2">
                                    <Frame BackgroundColor="{DynamicResource CustomGreen}" WidthRequest="24" HeightRequest="24" Padding="0">
                                        <Image Source="star_icon.png" WidthRequest="20" HeightRequest="20" />
                                    </Frame>
                                    <Frame BackgroundColor="{DynamicResource CustomGreen}" WidthRequest="24" HeightRequest="24" Padding="0">
                                        <Image Source="star_icon.png" WidthRequest="20" HeightRequest="20" />
                                    </Frame>
                                    <Frame BackgroundColor="{DynamicResource CustomGreen}" WidthRequest="24" HeightRequest="24" Padding="0">
                                        <Image Source="star_icon.png" WidthRequest="20" HeightRequest="20" />
                                    </Frame>
                                </StackLayout>
                                <Label Text="Phạm Hoài An" FontSize="14" Margin="0,2,0,0" TextColor="Gray" FontAttributes="Bold" />
                                <Label Text="Chất lượng sản phẩm tuyệt vời, tôi sẽ mua lần nữa!" 
                                  FontSize="13"
                                  TextColor="DarkGray"
                                  MaxLines="3" 
                                  Margin="0,5,0,0" />
                            </StackLayout>
                        </Frame>

                        <Frame BackgroundColor="White" CornerRadius="10" WidthRequest="250" HasShadow="True">
                            <StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="2">
                                    <Frame BackgroundColor="{DynamicResource CustomGreen}" WidthRequest="24" HeightRequest="24" Padding="0">
                                        <Image Source="star_icon.png" WidthRequest="20" HeightRequest="20" />
                                    </Frame>
                                    <Frame BackgroundColor="{DynamicResource CustomGreen}" WidthRequest="24" HeightRequest="24" Padding="0">
                                        <Image Source="star_icon.png" WidthRequest="20" HeightRequest="20" />
                                    </Frame>
                                    <Frame BackgroundColor="{DynamicResource CustomGreen}" WidthRequest="24" HeightRequest="24" Padding="0">
                                        <Image Source="star_icon.png" WidthRequest="20" HeightRequest="20" />
                                    </Frame>
                                </StackLayout>
                                <Label Text="Trần Minh Hải" FontSize="14"  Margin="0,2,0,0" TextColor="Gray" FontAttributes="Bold" />
                                <Label Text="Giao hàng nhanh chóng, sản phẩm như mô tả, rất hài lòng!" 
                                    FontSize="13"
                                    TextColor="DarkGray"
                                    MaxLines="3" 
                                    Margin="0,5,0,0" />
                            </StackLayout>
                        </Frame>
                    </StackLayout>
                </ScrollView>

                <!-- Quảng bá -->
                <Grid ColumnSpacing="20" Padding="20,30" BackgroundColor="#F2F2F2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>


                    <!-- Hình ảnh điện thoại -->
                    <Image Grid.Column="0"
                       Source="mockup_phone.png"
                       Aspect="AspectFill"
                       VerticalOptions="Center"
                       HorizontalOptions="Center" />

                    <!-- Nội dung bên phải -->
                    <StackLayout Grid.Column="1"
                         Padding="30"
                         HorizontalOptions="Center" 
                        
                         VerticalOptions="Center">
                        <Label Text="Dòng điện thoại Redmi mới"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#333333" />
                        <Label Text="Màn hình sắc nét, hiệu năng mạnh mẽ và giá cả hợp lý, mang đến trải nghiệm tuyệt vời cho người dùng"
                            FontSize="16"
                            TextColor="#555555"
                            Margin="0,10,0,20" />
                        <Label Text="Mới"
                        FontSize="14"
                        TextColor="#777777" />
                        <Label Text="Redmi note 13"
                            FontSize="28"
                            FontAttributes="Bold"
                            TextColor="#222222" />

                        <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,5">
                            <Label Text="7.990.000"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#D9480F" />
                            <Label Text="8.990.000"
                           FontSize="20"
                           TextDecorations="Strikethrough"
                           TextColor="#777777" />
                        </StackLayout>

                        <Button Text="Xem ngay"
                         FontSize="16"
                         CornerRadius="8"
                         BackgroundColor="#FF5722"
                         TextColor="White"
                         HeightRequest="48"
                         WidthRequest="180"
                         Clicked="OnSenifoneTapped" />

                      
                    </StackLayout>
                </Grid>

                <Grid
                    Padding="20"
                    ColumnSpacing="20"
                    RowSpacing="20">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Item 1 -->
                    <VerticalStackLayout
                        Grid.Column="0"
                        HorizontalOptions="Center"
                        Spacing="8">
                        <Image
                            Source="get_started.png"
                            WidthRequest="150"
                            HeightRequest="150" />
                        <Label
                              Text="Dễ dàng mua sắm"
                              FontAttributes="Bold"
                              FontSize="16"
                              HorizontalTextAlignment="Center" />
                        <Label
                          Text="Hoàn tất quy trình mua sắm trong 2 bước"
                          FontSize="13"
                          TextColor="Gray"
                          HorizontalTextAlignment="Center" />   
                    </VerticalStackLayout>

                    <!-- Item 2 -->
                    <VerticalStackLayout
                        Grid.Column="1"
                        HorizontalOptions="Center"
                        Spacing="8">
                        <Image
                             Source="easy_operation.png"
                             WidthRequest="150"
                             HeightRequest="150" />
                        <Label
                            Text="Sao lưu dữ liệu"
                            FontAttributes="Bold"
                            FontSize="16"
                            HorizontalTextAlignment="Center" />
                                        <Label
                            Text="Hỗ trợ chuyển dữ liệu sang thiết bị mới"
                            FontSize="13"
                            TextColor="Gray"
                            HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>

                    <!-- Item 3 -->
                    <VerticalStackLayout
                        Grid.Column="2"
                        HorizontalOptions="Center"
                        Spacing="8">
                        <Image
                          Source="safe_environment.png"
                          WidthRequest="150"
                           HeightRequest="150"/>
                        <Label
                          Text="Bảo mật thông tin"
                          FontAttributes="Bold"
                          FontSize="16"
                          HorizontalTextAlignment="Center" />
                        <Label
                          Text="Thông tin khách hàng không được chia sẻ cho bên thứ ba"
                          FontSize="13"
                          TextColor="Gray"
                          HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>

                    <!-- Item 4 -->
                    <VerticalStackLayout
                        Grid.Column="3"
                        HorizontalOptions="Center"
                        Spacing="8">
                        <Image
                          Source="we_help.png"
                           WidthRequest="150"
                            HeightRequest="150" />
                        <Label
                          Text="Hỗ trợ tận tâm"
                          FontAttributes="Bold"
                          FontSize="16"
                          HorizontalTextAlignment="Center" />
                        <Label
                          Text="Còn thắc mắc? Dịch vụ khách hàng luôn sẵn sàng!"
                          FontSize="13"
                          TextColor="Gray"
                          HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>

                </Grid>
                <!-- Contact -->
                <Grid HeightRequest="400" Margin="0,20,0,0">
                   
                    <Image Source="contact_banner.png" Aspect="AspectFill" />
                    <BoxView BackgroundColor="#60000000" />
                    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center" Padding="20" Spacing="10">
                        <Label Text="Bạn có thắc mắc?" FontSize="40" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" />
                        <Label Text="Chúng tôi rất vui lòng được giải đáp" FontSize="20" FontAttributes="Bold" TextColor="LightGray" HorizontalOptions="Center" />
                        <Button Text="Liên hệ với chúng tôi" BackgroundColor="#FF5722" TextColor="White" CornerRadius="8" WidthRequest="180" Margin="0,16,0,0" />
                    </StackLayout>
                </Grid>

                <!--Footer-->
                <shared:FooterView />

            </StackLayout>
        </ScrollView>



    </Grid>
</ContentPage>