<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SellPhoneApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SellPhoneApplication"
    xmlns:views="clr-namespace:SellPhoneApplication.Views"
    Title="Senifone">

    <ShellContent ContentTemplate="{DataTemplate views:LoginPage}" Route="LoginPage" />
    <ShellContent ContentTemplate="{DataTemplate views:OrderManagementPage}" Route="OrderManagementPage" />
    <ShellContent ContentTemplate="{DataTemplate views:ProductManagementPage}" Route="ProductManagementPage" />
    <ShellContent ContentTemplate="{DataTemplate views:PhonesPage}" Route="PhonesPage" />

    <ShellContent ContentTemplate="{DataTemplate views:FavouritePage}" Route="FavouritePage" />

    <ShellContent ContentTemplate="{DataTemplate views:CartPage}" Route="CartPage" />

    <ShellContent ContentTemplate="{DataTemplate views:PhoneDetailPage}" Route="PhoneDetailPage" />

    <ShellContent ContentTemplate="{DataTemplate views:RegisterPage}" Route="RegisterPage" />
    <ShellContent ContentTemplate="{DataTemplate views:HomePage}" Route="HomePage" />

</Shell>
